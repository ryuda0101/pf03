<% if (!userData){ %>
    <script>
        alert("비회원은 접근할 수 없는 페이지 입니다.");
        location.href = "/admin_login";
    </script>
<% } else { %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>이벤트 추가 페이지</title>
    <link rel="stylesheet" href="/css/style.css">
    <!-- 폰트 관련 링크 -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
</head>
<body>
    <%- include("../common/admin_header.ejs") %>
    <div id="brd_add">
        <div class="center">
            <h2>이벤트</h2>
            <form action="/event_add" method="post" enctype="multipart/form-data">
                <input name="event_auther" type="hidden" value="<%- userData.name %>">
                <div class="line">
                    <label for="title">제목</label>
                    <input name="event_title" type="text" id="title">
                </div>
                <div class="line">
                    <label for="date">날짜</label>
                    <input name="event_date" type="text" id="date">
                </div>
                <div class="line">
                    <label for="file">썸네일 첨부</label>
                    <input name="thumbnail_file" type="file" id="file">
                </div>
                <div class="line">
                    <label for="file">파일 첨부1</label>
                    <input name="event_file1" type="file" id="file">
                </div>
                <div class="line">
                    <label for="file">파일 첨부2</label>
                    <input name="event_file2" type="file" id="file">
                </div>
                <div class="line">
                    <label for="context">내용</label>
                    <textarea name="event_context" id="context"></textarea>
                </div>
                <div class="line btns">
                    <button>작성</button>
                    <a href="/admin_event">작성 취소</a>
                </div>
            </form>
        </div>
    </div>
    <%- include("../common/footer.ejs") %>
    <!-- 스크롤시 해더 변하는 이벤트 관련 스크립트 -->
    <script src="/js/main_scroll.js"></script>
</body>
</html>
<% } %>