<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>고객 후기 상세 페이지</title>
    <link rel="stylesheet" href="/css/style.css">
    <!-- 폰트 관련 링크 -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
</head>
<body>
    <%- include("../common/admin_header.ejs") %>
    <div id="brd_detail">
        <div class="center">
            <h2>고객 후기</h2>
            <% reviewData.forEach((item,index) => { %>
                <table>
                    <tr>
                        <th>제목</th>
                        <td><%- item.title %></td>
                    </tr>
                    <tr>
                        <th>글쓴이</th>
                        <td><%- item.name %> 고객님</td>
                    </tr>
                    <tr>
                        <th>날짜</th>
                        <td><%- item.date %></td>
                    </tr>
                    <tr class="context">
                        <td><img src="/upload/<%- item.file %>"></td>
                        <td><%- item.context %></td>
                    </tr>
                </table>
                <div class="btns">
                    <a class="edit" href="/review_edit/<%- item.num %>">수정</a>
                    <a class="list" href="/admin_review">목록</a>
                    <a class="delete" href="/review_delete/<%- item.num %>">삭제</a>
                </div>
            <% }); %>
        </div>
    </div>
    <%- include("../common/footer.ejs") %>
    <!-- 삭제확인 스크립트 -->
    <script src="/js/delete_btn.js"></script>
</body>
</html>